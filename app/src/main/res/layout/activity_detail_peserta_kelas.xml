<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.ac.its.sikemastc.activity.dosen.DetailPesertaKelas">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/tv_detail_kehadiran_peserta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="Riwayat Kehadiran"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_nrp" />

    <ImageView
        android:id="@+id/iv_title_underline_1"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/tv_detail_kehadiran_peserta"
        app:layout_constraintRight_toRightOf="@+id/tv_detail_kehadiran_peserta"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_kehadiran_peserta"
        app:srcCompat="@color/colorAccent"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/tv_mata_kuliah_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:text="Mata Kuliah"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/tv_mata_kuliah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="24dp"
        android:text="Pemrograman Perangkat Bergerak"
        app:layout_constraintLeft_toRightOf="@+id/tv_mata_kuliah_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_mata_kuliah_label"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp" />

    <TextView
        android:id="@+id/tv_nama_peserta_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nama"
        app:layout_constraintLeft_toLeftOf="@+id/tv_mata_kuliah_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_mata_kuliah_label" />

    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:text="Ronald Gunawan Radityatama"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/tv_mata_kuliah"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_nama_peserta_label"
        android:layout_marginEnd="24dp" />

    <TextView
        android:id="@+id/tv_nrp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="NRP"
        app:layout_constraintLeft_toLeftOf="@+id/tv_nama_peserta_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_peserta_label" />

    <TextView
        android:id="@+id/tv_nrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5113100112"
        app:layout_constraintLeft_toLeftOf="@+id/tv_nama"
        app:layout_constraintTop_toTopOf="@+id/tv_nrp_label" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_riwayat_kehadiran_peserta"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_title_underline_1"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="8dp" />

</android.support.constraint.ConstraintLayout>
