<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddSetWajah">

    <TextView
        android:id="@+id/tv_user_detail_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mahasiswa Terlogin"
        android:layout_marginRight="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/tv_user_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="NRP - Nama"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintLeft_toLeftOf="@+id/tv_user_detail_info"
        app:layout_constraintRight_toRightOf="@+id/tv_user_detail_info"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_detail_info" />

    <TextView
        android:id="@+id/tv_data_set_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Jumlah Data Set Tersimpan"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_detail"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/tv_user_detail_info"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_user_detail_info" />

    <TextView
        android:id="@+id/tv_data_set"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:gravity="center"
        android:text="Data Set Wajah Tidak Ditemukan"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/tv_data_set_info"
        app:layout_constraintRight_toRightOf="@+id/tv_data_set_info"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_data_set_info" />

    <Button
        android:id="@+id/btn_upload_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload File Dummy Button"
        app:layout_constraintTop_toTopOf="@+id/tv_user_detail_info"
        android:layout_marginTop="0dp"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_user_detail_info"
        android:layout_marginLeft="32dp"
        app:layout_constraintHorizontal_bias="0.508" />

    <Button
        android:id="@+id/btn_sinkronisasi_dataset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sinkronisasi Data Set Wajah"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_upload_file"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/btn_upload_file"
        app:layout_constraintHorizontal_bias="0.47"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_upload_file" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Tambah Data Set Foto Wajah"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_sinkronisasi_dataset"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/btn_sinkronisasi_dataset"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_sinkronisasi_dataset" />

</android.support.constraint.ConstraintLayout>
