<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ac.its.sikemastc">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front.autofocus"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppMaterialTheme">
        <activity android:name=".utilities.NavigationBar" />
        <activity android:name=".utilities.ActionBarToolbar" />
        <activity android:name=".activity.dosen.LihatKehadiran" />
        <activity
            android:name=".activity.dosen.ListKelasActivity"
            android:theme="@style/AppNavDrawerMaterialTheme" />
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/AppLoginMaterialTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.BaseActivity" />
        <activity
            android:name=".activity.dosen.HalamanUtamaDosen"
            android:theme="@style/AppNavDrawerMaterialTheme" />
        <activity
            android:name=".activity.mahasiswa.HalamanUtamaMahasiswa"
            android:theme="@style/AppNavDrawerMaterialTheme" />
        <activity
            android:name=".activity.orangtua.HalamanUtamaOrangtua"
            android:theme="@style/AppNavDrawerMaterialTheme" />
        <activity android:name=".activity.dosen.DetailPerkuliahan" />
        <activity android:name=".activity.mahasiswa.LihatJadwal" />
        <activity android:name=".activity.orangtua.LihatJadwalMahasiswa" />
        <activity android:name=".activity.dosen.DetailListKelas" />
        <activity android:name=".activity.dosen.PenjadwalanUlangSementara" />
        <activity android:name=".activity.dosen.PenjadwalanUlangPermanen" />
        <activity android:name=".activity.SettingsActivity" />
        <activity android:name=".activity.dosen.DetailKehadiranPeserta" />
        <activity android:name=".activity.dosen.DetailPertemuanKelas" />
        <activity android:name=".activity.mahasiswa.DetailLihatJadwal" />
        <activity android:name=".activity.verifikasi_wajah.MenuVerifikasiWajah" />
        <activity android:name=".activity.verifikasi_wajah.KelolaDataSetWajah" />
        <activity
            android:name=".activity.verifikasi_wajah.DetectionView"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity android:name=".activity.verifikasi_wajah.TrainingWajah" />
        <activity
            android:name=".activity.verifikasi_wajah.FaceRecognizing"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity
            android:name=".activity.verifikasi_wajah.AddSetWajahPreview"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity android:name=".activity.verifikasi_wajah.VerifikasiWajah" />

        <provider
            android:name=".data.SikemasProvider"
            android:authorities="id.ac.its.sikemastc"
            android:exported="false" />

        <service
            android:name=".sync.SikemasReminderIntentService"
            android:exported="false" />
        <service
            android:name=".sync.SikemasSyncPerkuliahanIntentService"
            android:exported="false" />
        <service
            android:name=".sync.SikemasSyncKelasIntentService"
            android:exported="false" />
        <service
            android:name=".sync.PerkuliahanFirebaseJobService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>
        <service
            android:name=".sync.SikemasSyncPerkuliahanMahasiswaIntentService"
            android:exported="false" />
        <service
            android:name=".sync.SikemasSyncKelasMahasiswaIntentService"
            android:exported="false" />

    </application>
</manifest>