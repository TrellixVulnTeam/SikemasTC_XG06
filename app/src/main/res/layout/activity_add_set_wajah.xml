<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddSetWajah">

    <TextView
        android:id="@+id/tv_user_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="100dp"
        android:text="NRP - Nama"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/btn_training_test"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        android:checked="false"
        android:textOff="Training"
        android:textOn="Test"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_detail" />

    <ToggleButton
        android:id="@+id/btn_reference_deviation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:checked="false"
        android:enabled="false"
        android:textOff="Reference"
        android:textOn="Deviation"
        app:layout_constraintLeft_toLeftOf="@+id/btn_training_test"
        app:layout_constraintRight_toRightOf="@+id/btn_training_test"
        app:layout_constraintTop_toBottomOf="@+id/btn_training_test" />

    <ToggleButton
        android:id="@+id/btn_time_manually"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:checked="false"
        android:textOff="Time"
        android:textOn="Manually"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/btn_training_test"
        app:layout_constraintRight_toRightOf="@+id/btn_training_test"
        app:layout_constraintTop_toBottomOf="@+id/btn_reference_deviation" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:text="Start"
        app:layout_constraintLeft_toLeftOf="@+id/btn_training_test"
        app:layout_constraintRight_toRightOf="@+id/btn_training_test"
        app:layout_constraintTop_toBottomOf="@+id/btn_time_manually" />

</android.support.constraint.ConstraintLayout>
