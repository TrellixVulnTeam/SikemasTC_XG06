<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn_add_person"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app"
    tools:context=".activity.verifikasi_wajah.VerifikasiWajahMenuActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_user_detail_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:text="@string/menu_verifikasi_wajah_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="24sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="parent" />

            <TextView
                android:id="@+id/tv_user_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:hint="@string/nrp_nama_hint"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/colorPrimaryText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_user_detail_info" />

            <ImageView
                android:id="@+id/iv_verifikasi_logo"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                app:layout_constraintLeft_toLeftOf="@+id/tv_user_detail"
                app:layout_constraintTop_toBottomOf="@+id/tv_user_detail"
                app:srcCompat="@drawable/ic_141_browser" />

            <ImageView
                android:id="@+id/iv_status_data_wajah"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toRightOf="@id/iv_verifikasi_logo"
                app:layout_constraintTop_toTopOf="@id/iv_verifikasi_logo"
                app:srcCompat="@drawable/ic_do_not_disturb" />

            <TextView
                android:id="@+id/tv_status_data_wajah"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/tv_empty_value"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_status_data_wajah"
                app:layout_constraintLeft_toRightOf="@id/iv_status_data_wajah"
                app:layout_constraintRight_toRightOf="@+id/tv_user_detail"
                app:layout_constraintTop_toTopOf="@id/iv_status_data_wajah" />

            <Button
                android:id="@+id/btn_kelola_data_set_wajah"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_autorenew"
                android:gravity="center"
                android:text="@string/sinkronisasi_data_set_wajah"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="@color/colorStatusHadir"
                android:textSize="14sp"
                android:theme="@style/WhiteButtonTheme"
                app:layout_constraintLeft_toLeftOf="@+id/iv_status_data_wajah"
                app:layout_constraintRight_toRightOf="@+id/tv_status_data_wajah"
                app:layout_constraintTop_toBottomOf="@+id/tv_update_terakhir" />

            <Button
                android:id="@+id/btn_verification_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="64dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_upload_file"
                android:gravity="center"
                android:text="@string/verification_view_btn_label"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                android:theme="@style/WhiteButtonTheme"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="@+id/iv_verifikasi_logo"
                app:layout_constraintRight_toRightOf="@+id/tv_status_data_wajah"
                app:layout_constraintTop_toBottomOf="@+id/iv_verifikasi_logo" />

            <TextView
                android:id="@+id/tv_update_terakhir_caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Cek pembaharuan terakhir"
                android:textColor="@color/colorSecondaryText"
                app:layout_constraintLeft_toLeftOf="@+id/iv_status_data_wajah"
                app:layout_constraintRight_toRightOf="@+id/tv_user_detail"
                app:layout_constraintTop_toBottomOf="@+id/tv_status_data_wajah" />

            <TextView
                android:id="@+id/tv_update_terakhir"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/tv_empty_value"
                app:layout_constraintLeft_toLeftOf="@+id/tv_update_terakhir_caption"
                app:layout_constraintRight_toRightOf="@+id/tv_update_terakhir_caption"
                app:layout_constraintTop_toBottomOf="@+id/tv_update_terakhir_caption" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
